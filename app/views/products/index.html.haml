%h2 Listing products

%table.table.table-striped.table-condensed
  %thead
    %tr
      %th Name
      %th Price
      %th Description
      %th.button-col
      %th.button-col
      %th.button-col

  %tbody
    - products.each do |product|
      %tr
        %td= product.name
        %td= product.price
        %td= product.description
        %td= link_to 'Show', product, class: 'btn btn-xs btn-default'
        %td= link_to 'Edit', edit_product_path(product), class: 'btn btn-xs btn-primary'
        %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'

%br

= link_to 'New Product', new_product_path, class: 'btn btn-sm btn-success'
