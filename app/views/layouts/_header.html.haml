
%nav.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{ 'aria-expanded' => 'false',
                                       'data-target' => '#bs-navbar-collapse-1',
                                       'data-toggle' => 'collapse',
                                       type: 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Store', root_path, class: 'navbar-brand'
    #bs-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to 'Products', products_path
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{ 'aria-expanded' => 'false',
                                'aria-haspopup' => 'true',
                                'data-toggle' => 'dropdown', href: '#', role: 'button' }
              Menu
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to 'Shopping Cart', '#'
              %li
                = link_to 'Checkout', '#'
              %li
                = link_to 'Account History', '#'
              %li.divider{ role: 'separator' }
              %li
                = link_to 'Logout', destroy_user_session_path, method: 'delete'
        - else
          %li
            = link_to 'Login', new_user_session_path
